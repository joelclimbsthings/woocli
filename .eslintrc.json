{
	"extends": [ "plugin:@woocommerce/eslint-plugin/recommended" ],
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"globals": {
		"es6": true,
		"chalk": true,
		"argv": true,
		"$": true,
		"cd": true
	},
	"parser": "@babel/eslint-parser",
	"parserOptions": {
	  "babelOptions": {
		"plugins": ["@babel/plugin-syntax-top-level-await"]
	  },
	  "requireConfigFile": false,
	  "ecmaVersion": 2020,
	  "sourceType": "module"
	},
	"rules": {
		"camelcase": 0,
		"indent": 0,
		"max-len": [ 2, { "code": 140 } ],
		"no-console": 1
	}
  }
  
